@model ComuniQBD.Models.Publicacao

@{
    ViewData["Title"] = "Create";
    <link rel="stylesheet" href="~/css/Publicacao.css" asp-append-version="true" />
}

<h1>Criar</h1>

<h4>Publicação</h4>
<hr />
<div class="row">
    <div class="col-md-4 createCriar">
         @using (Html.BeginForm("Create", "Publicacao", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PublicacaoTitulo" class="control-label"></label>
                <input asp-for="PublicacaoTitulo" class="form-control" />
                <span asp-validation-for="PublicacaoTitulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BairroId" class="control-label"></label>
                <select asp-for="BairroId" class ="form-control" asp-items="ViewBag.BairroId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PublicacaoMidia" class="control-label"></label>
                <input type="file" name="PublicacaoMidia" id="PublicacaoMidia" onchange="fileCheck(this);" class="midia"/>
                <span asp-validation-for="PublicacaoMidia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublicacaoDescricao" class="control-label"></label>
                <input asp-for="PublicacaoDescricao" class="form-control" />
                <span asp-validation-for="PublicacaoDescricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Usuario</label>
                <select name="usuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        }
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
