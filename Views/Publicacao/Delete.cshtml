@model ComuniQBD.Models.Publicacao

@{
    ViewData["Title"] = "Delete";
    <link rel="stylesheet" href="~/css/Publicacao.css" asp-append-version="true" />
}

<h1>Excluir</h1>

<h3>Deseja realmente excluir isso?</h3>
<div>
    <h4>Publicacao</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2 deletPublic">
            @Html.DisplayNameFor(model => model.PublicacaoTitulo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PublicacaoTitulo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Bairro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Bairro.BairroNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PublicacaoDescricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PublicacaoDescricao)
        </dd>
        <dt class="col-sm-2">
            Usuário
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Usuario
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PublicacaoId" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
