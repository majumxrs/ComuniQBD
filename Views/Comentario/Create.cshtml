@model ComuniQBD.Models.Comentario

@{
    ViewData["Title"] = "Create";
    <link rel="stylesheet" href="~/css/Comentario.css" asp-append-version="true" />
}

<h1>Criar</h1>

<h4>Comentario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ComentarioTexto" class="control-label"></label>
                <input asp-for="ComentarioTexto" class="form-control" />
                <span asp-validation-for="ComentarioTexto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label"></label>
                <select asp-for="UsuarioId" class ="form-control" asp-items="ViewBag.UsuarioId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PublicacaoId" class="control-label"></label>
                <select asp-for="PublicacaoId" class ="form-control" asp-items="ViewBag.PublicacaoId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
