@model IEnumerable<ComuniQBD.Models.TipoPerfil>

@{
    ViewData["Title"] = "Index";
    <link rel="stylesheet" href="~/css/TipoPerfil.css" asp-append-version="true" />
}

<h1>Tipo do Perfil</h1>

<p>
    <a asp-action="Create">Criar novo</a>
</p>
<div class="table-container">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TipoPerfilNome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr class="tabelinha">
            <td>
                @Html.DisplayFor(modelItem => item.TipoPerfilNome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TipoPerfilId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.TipoPerfilId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.TipoPerfilId">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>