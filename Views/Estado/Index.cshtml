@model IEnumerable<ComuniQBD.Models.Estado>

@{
    ViewData["Title"] = "Index";
    <link rel="stylesheet" href="~/css/Estado.css" asp-append-version="true" />
}

<h1>Estado</h1>

<button class="btnnew">
    <a asp-action="Create">Criar Novo</a>
</button>
<div class="table-container">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EstadoNome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr class="tabelinha">
            <td>
                @Html.DisplayFor(modelItem => item.EstadoNome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EstadoId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.EstadoId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.EstadoId">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>