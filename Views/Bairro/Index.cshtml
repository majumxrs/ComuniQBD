@model IEnumerable<ComuniQBD.Models.Bairro>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BairroNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BairroNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade.CidadeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado.EstadoId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BairroId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BairroId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BairroId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
