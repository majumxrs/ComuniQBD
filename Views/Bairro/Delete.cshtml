@model ComuniQBD.Models.Bairro

@{
    ViewData["Title"] = "Delete";
    <link rel="stylesheet" href="~/css/Bairro.css" asp-append-version="true" />
}

<h1>Excluir</h1>

<h3>Deseja realmente excluir isso?</h3>
<div>
    <h4>Bairro</h4>
    <hr />
    <dl class="row ">
        <dt class="col-sm-2 deletBairr">
            @Html.DisplayNameFor(model => model.BairroNome)
        </dt>
        <dd class="col-sm-10 deletBairr">
            @Html.DisplayFor(model => model.BairroNome)
        </dd>
        <dt class="col-sm-2 deletBairr">
            @Html.DisplayNameFor(model => model.Cidade)
        </dt>
        <dd class="col-sm-10 deletBairr">
            @Html.DisplayFor(model => model.Cidade.CidadeNome)
        </dd>
        <dt class="col-sm-2 deletBairr">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class="col-sm-10 deletBairr">
            @Html.DisplayFor(model => model.Estado.EstadoNome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="BairroId" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
