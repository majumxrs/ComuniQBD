@model ComuniQBD.Models.Denuncia

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Denuncia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DenunciaTitulo" class="control-label"></label>
                <input asp-for="DenunciaTitulo" class="form-control" />
                <span asp-validation-for="DenunciaTitulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DenunciaMidia" class="control-label"></label>
                <input asp-for="DenunciaMidia" class="form-control" />
                <span asp-validation-for="DenunciaMidia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DenunciaDescricao" class="control-label"></label>
                <input asp-for="DenunciaDescricao" class="form-control" />
                <span asp-validation-for="DenunciaDescricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoDenunciaId" class="control-label"></label>
                <select asp-for="TipoDenunciaId" class ="form-control" asp-items="ViewBag.TipoDenunciaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BairroId" class="control-label"></label>
                <select asp-for="BairroId" class ="form-control" asp-items="ViewBag.BairroId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
