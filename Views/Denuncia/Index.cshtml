@model IEnumerable<ComuniQBD.Models.Denuncia>

@{
    ViewData["Title"] = "Index";
}

<h1>Denuncia</h1>

<p>
    <a asp-action="Create">Criar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DenunciaTitulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DenunciaMidia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DenunciaDescricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoDenuncia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bairro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DenunciaTitulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DenunciaMidia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DenunciaDescricao)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.TipoDenuncia.TipoDenunciaNome)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Bairro.BairroNome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DenunciaId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.DenunciaId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.DenunciaId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
