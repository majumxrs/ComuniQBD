@model IEnumerable<ComuniQBD.Models.Cidade>

@{
    ViewData["Title"] = "Index";
    <link rel="stylesheet" href="~/css/Cidade.css" asp-append-version="true" />
}


<h1>Cidade</h1>

<button class="btnnew">
    <a asp-action="Create">Criar Nova</a>
</button>
<div class="table-container">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CidadeNome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr class="table">
            <td>
                @Html.DisplayFor(modelItem => item.CidadeNome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CidadeId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.CidadeId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.CidadeId">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>