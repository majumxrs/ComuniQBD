@model ComuniQBD.Models.Cidade

@{
    ViewData["Title"] = "Edit";
    <link rel="stylesheet" href="~/css/Cidade.css" asp-append-version="true" />
}

<h1>Editar</h1>

<h4>Cidade</h4>
<hr />
<div class="row">
    <div class="col-md-4 editCidad">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CidadeId" />
            <div class="form-group">
                <label asp-for="CidadeNome" class="control-label"></label>
                <input asp-for="CidadeNome" class="form-control" />
                <span asp-validation-for="CidadeNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
