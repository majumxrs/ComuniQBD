@model IEnumerable<ComuniQBD.Models.Campanha>

@{
    ViewData["Title"] = "Index";
}

<h1>Campanha</h1>

<p>
    <a asp-action="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CampanhaTitulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CampanhaMidia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CampanhaDescricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoCampanha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CampanhaTitulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CampanhaMidia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CampanhaDescricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoCampanha.TipoCampanhaNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade.CidadeId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CampanhaId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.CampanhaId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.CampanhaId">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
